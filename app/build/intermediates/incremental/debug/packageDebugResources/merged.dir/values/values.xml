    <color name="bg_card">#1A1A2E</color>
    <color name="bg_card_elevated">#252542</color>
    <color name="bg_dark">#0D0D1A</color>
    <color name="gradient_end">#00D9FF</color>
    <color name="gradient_start">#6C63FF</color>
    <color name="ic_launcher_background">#0D0D1A</color>
    <color name="ic_launcher_foreground">#6C63FF</color>
    <color name="primary">#6C63FF</color>
    <color name="primary_dark">#5A52E0</color>
